@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Departments</h1>

@using (Html.BeginForm())
{
  <p>
  Find by name: @Html.TextBox("SearchString")
  <input type="submit" value="Search" />
  </p>
}

@if (@Model.Count == 0)
{
  <h3> No departments have been added yet!</h3>
}

@foreach (Department department in Model)
{
  <li>@Html.ActionLink($"{department.Name}", "Details", new {id = department.DepartmentId}) </li>
}

</br>
<li>@Html.ActionLink("Add New Department", "Create")</li>
<li>@Html.ActionLink("Home", "Index", "Home")</li>
