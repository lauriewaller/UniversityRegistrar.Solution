@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course;

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

<h3>Department Name: @Model.Department.Name</h3>


@if (@Model.JoinEntities.Count == 0)
{
  <p>This course does not contain any students. Ponder teaching something more interesting!</p>
}
else
{
  <h4>Students this course contains:</h4>
  <ul>
  @foreach (var join in Model.JoinEntities)
    {
      <li>@join.Student.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Back to Course List", "Index")</p>
<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Course", "Delete", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Add a Student to Course", "Create", "Students")</p>